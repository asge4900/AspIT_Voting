@model IEnumerable<AspIT_Voting.Web.Models.ActivitySuggestion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActivtySuggestionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivtySuggestionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ActivitySuggestionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ActivitySuggestionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ActivitySuggestionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
