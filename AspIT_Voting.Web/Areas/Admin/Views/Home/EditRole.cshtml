@model EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditRole</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>Bruger i denne rolle</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">Ingen i øjeblikket</h5>
                    }
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-controller="Home" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id">Tilføj eller fjern bruger</a>
                </div>
            </div>
        </form>
    </div>
</div>