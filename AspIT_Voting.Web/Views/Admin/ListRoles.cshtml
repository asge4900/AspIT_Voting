@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ListRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListRoles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" asp-controller="Admin" asp-action="CreateRole" >Opret ny rolle</a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>
            <div class="card-header">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Ingen roller oprettet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Brug knappen til at oprette roller
            </h5>
            <a class="btn btn-primary" asp-controller="Admin" asp-action="CreateRole">
                Opret roller
            </a>
        </div>
    </div>
}