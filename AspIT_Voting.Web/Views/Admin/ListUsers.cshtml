@inject UserManager<ApplicationUser> userManager;
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "ListUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head{ 
    <style>
        #container{
            position: relative;
            margin-right: 5%;
        }

        #container a{
            position: absolute;
            bottom: 0;            
        }
    </style>
}

<h1>ListUsers</h1>

@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account" class="btn btn-primary mb-3">Add new User</a>

    foreach (var user in Model)
    {
        //if (await userManager.IsInRoleAsync(user, "Bruger"))
        //{
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="row">
                    <div id="container">
                        <a asp-action="EditUser" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    </div>
                    
                    <div class="text-center">
                        <span>Er du sikker på at du vil slette?</span>
                        <div>
                            <input type="submit" value="Ja" class="btn btn-danger" />
                            <a class="btn btn-primary">Nej</a>
                        </div>                        
                    </div>                    

                    @*<div>
                        <a class="btn btn-danger">Slet</a>
                    </div>*@
                </form>
            </div>
        </div>
        //}
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Add new user</a>
        </div>
    </div>
}

