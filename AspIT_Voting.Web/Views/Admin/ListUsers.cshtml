@inject UserManager<ApplicationUser> userManager;
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "ListUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListUsers</h1>

@if (Model.Any())
{
    <a asp-action="AdminRegister" asp-controller="Admin" class="btn btn-primary mb-3">Add new User</a>

    foreach (var user in Model)
    {
        //if (await userManager.IsInRoleAsync(user, "Bruger"))
        //{
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="row">
                    <div class="editDiv">
                        <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Rediger</a>
                    </div>
                    
                    <div class="text-center confirmDeleteDiv hide" id="confirmDeleteDiv_@user.Id">
                        <span>Er du sikker på at du vil slette?</span>
                        <div>
                            <input type="submit" value="Ja" class="btn btn-danger" />
                            <a href="#" class="btn btn-primary" data-id="@user.Id">Nej</a>
                        </div>                        
                    </div>                    

                    <div class="deleteDiv" id="deleteDiv_@user.Id">
                        <a href="#" class="btn btn-danger" data-id="@user.Id">Slet</a>
                    </div>
                </form>
            </div>
        </div>
        //}
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Add new user</a>
        </div>
    </div>
}

